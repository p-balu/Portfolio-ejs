<%- include partials/header.ejs %>

<!--Contacts Page-->
<main
  class="container"
  style=" margin-top: 5%; margin-bottom: 2%"
>
<h1 class="py-2"><%= title%></h1>
  <table class="table table-hover border" style="border-radius: 5px;">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Contact Name</th>
        <th scope="col">Contact Number</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>

      </tr>
    </thead>
    <tbody style="background-color: white">
      <% for (let i=0;i<ContactList.length;i++) {%>
      <tr>
        <th scope="row"><%= i+1%></th>
        <td><%= ContactList[i].contactName %></td>
        <td><%= ContactList[i].contactNumber %></td>
        <td><%= ContactList[i].email %></td>
        <td>
          <button class="btn btn-sm"><i class="far fa-eye" style="color: #007bff;"></i></button>
          <button class="btn btn-sm"><i class="fas fa-user-edit" style="color: #007bff;"></i></button>
          <button class="btn btn-sm"><i class="far fa-trash-alt" style="color: #007bff;"></i></button>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</main>
<%- include partials/footer.ejs %>
